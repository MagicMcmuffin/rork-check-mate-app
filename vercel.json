{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    },
    "backend/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "builds": [
    {
      "src": "backend/hono.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/hono.ts"
    },
    {
      "src": "/(.*)",
      "dest": "backend/hono.ts"
    }
  ]
}
